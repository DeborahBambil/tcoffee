#!/usr/bin/env perl
#This script reads an aln in fasta format and modifies names so thathere are no duplicates
#if two sequences have the same name, the second one is renamed name_1 and so on
use Env qw(HOST);
use Env qw(HOME);
use Env qw(USER);
#Specific Files and Default Parameters
open (F, $ARGV[0]);
while (<F>)
  {
    if ( /^>(\S+)/){$n++;$seq="";}
    else
      {
	$l=$_;
	chomp ($l);
	$seq.=$l;
      }
    $len=length($seq);
    if ($len>$mlen){$mlen=$len;}
  }
close (F);
print "$n $len";
open (F, $ARGV[0]);
while (<F>)
  {
    if ( /^>(\S+)/)
      {
	print "\n$1 ";
      }
    else
      {
	$l=$_;
	chomp ($l);
	print "$l";
      }
  }
print "\n";
close (F);
